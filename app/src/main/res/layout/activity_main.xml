<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="@color/Purple"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
    <TextView
        android:id="@+id/textView1514"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:text="@string/make_an_appointment"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView1746"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:text="@string/make_an_appointment_to_doctor_visit"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_margin="10dp"
        android:padding="20dp">
    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0"
        android:background="@drawable/edit_text_border"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/your_full_name"
        android:textColorHint="@color/white"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:minHeight="48dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_border">

        <TextView
            android:id="@+id/spinner_hint2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="8dp"
            android:text="@string/services_category"
            android:textAlignment="viewStart"
            android:clickable="true"
            android:focusable="true"
            android:gravity="start"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/county_spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:minHeight="48dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_border"
        >

        <TextView
            android:id="@+id/spinner_hint"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="8dp"
            android:text="@string/choose_doctor"
            android:textAlignment="viewStart"
            android:clickable="true"
            android:focusable="true"
            android:gravity="start"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/county_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:visibility="gone"/>
    </FrameLayout>

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0"
        android:ems="10"
        android:inputType="date"
        android:hint="@string/mm_dd_yy"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_text_border"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/book_now"
        android:background="@drawable/rounded_btn"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"/>

    </LinearLayout>

</LinearLayout>
