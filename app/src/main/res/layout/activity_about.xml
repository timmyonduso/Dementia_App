<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:background="#00000000">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:openDrawer="start"
        tools:context=".AboutActivity">

        <include layout="@layout/toolbar2"/>

        <ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_marginTop="170dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".AboutActivity"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <RelativeLayout
                        android:layout_width="290dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/about_bg">

                    </RelativeLayout>


                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="#00000000">



                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/invest"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:background="#00000000" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="280dp"
                        android:text="@string/about_medicare"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="340dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/all_in_one_worksite_health_solution"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/d_black"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="430dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/_25_years_of_experience_in_medical_services"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/Purple"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="520dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/medicare_huh"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"/>

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/know_more"
                        android:background="@drawable/rounded_btn"
                        android:layout_marginLeft="80dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="800dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".TestimonialActivity"
                        android:orientation="vertical"
                        android:layout_marginTop="900dp">




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/what_people_say"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/testimonials"
                            android:textColor="@color/black"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="300dp"
                            android:layout_height="280dp"
                            android:layout_gravity="center"
                            android:src="@drawable/testimonials"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/testimonial_bg"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Carl Johnson"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/_65_years"
                            android:textColor="@color/black"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:layout_marginTop="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/testimonial1"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:layout_marginTop="20dp"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="300dp"
                            android:layout_height="280dp"
                            android:layout_gravity="center"
                            android:src="@drawable/testimonials2"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/testimonial_bg"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/love_sosa"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/_77_years"
                            android:textColor="@color/black"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:layout_marginTop="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/testimonial2"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:layout_marginTop="20dp"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="300dp"
                            android:layout_height="280dp"
                            android:layout_gravity="center"
                            android:src="@drawable/testimonials3"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/testimonial_bg"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/saint_lauren"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/_71_years"
                            android:textColor="@color/black"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:layout_marginTop="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/testimonial3"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:layout_marginTop="20dp"/>


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


        </ScrollView>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/nav_menu"/>

    </androidx.drawerlayout.widget.DrawerLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/my_menu"/>
</RelativeLayout>